{
  "name": "@nevent/chatbot",
  "version": "0.1.0",
  "description": "Nevent embeddable chatbot widget SDK",
  "author": "Nevent Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/nevent-chatbot.umd.cjs",
  "module": "./dist/nevent-chatbot.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nevent-chatbot.js",
      "require": "./dist/nevent-chatbot.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "rm -f *.tsbuildinfo && vite build && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --reporter=verbose src/chatbot/__tests__/integration/",
    "test:perf": "vitest run --reporter=verbose src/chatbot/__tests__/performance/",
    "test:all": "vitest run --reporter=verbose",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "nevent",
    "chatbot",
    "widget",
    "embeddable",
    "ai",
    "conversational"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nevent/nev-sdks.git",
    "directory": "packages/chatbot"
  },
  "dependencies": {
    "@nevent/core": "file:../core"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
